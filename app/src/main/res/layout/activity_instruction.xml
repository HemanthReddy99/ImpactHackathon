<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InstructionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Instructions"
        android:textStyle="bold"
        android:textSize="38sp"
        android:textAllCaps="true"
        android:padding="20sp"
        android:textColor="#000000"
        android:gravity="center" />

    <Button
        android:id="@+id/instText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:text="After the BEEP, keep the coin you want to identify in front of camera, at least 6 inches away from it!\n\n\n Allow this application to access Camera of your device by clicking on the bottom right, if not done yet.\n\n\nTap to continue."
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:textAllCaps="false"
        android:textSize="26sp"
        android:gravity="center"
        android:textColor="#000000"
        android:background="#FFECB3"
        android:layout_gravity="center" />

</LinearLayout>